<h2 class="text-center mt-4"><%= params[:category] %> Movies</h2>

<% if @movies.count == 0 %>
  <div class="d-flex justify-content-center">
    <div class="my-1">
      <img src="https://cdn.dribbble.com/users/1231865/screenshots/11157048/media/bc9427646c632ded563ee076fdc5dfda.jpg?compress=1&resize=1000x750&vertical=top" alt="image couldn't loaded!">
    </div>
  </div>
  <div class="d-flex justify-content-center">
    <div class="my-4">
      <%= link_to 'Back', { controller: 'movies', action: 'index'}, class: "btn btn-primary" %>
    </div>
  </div>
<% else %>
  <div class="d-flex justify-content-center p-5">
    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% @movies.each do |movie| %>
        <div class ="card style="width: 18rem;">
          <div class="col">
              <% if movie.image.attached? %>
                <%= image_tag movie.image, height: "700px", width: "700px", class: "card-img-top" %>
              <% end %>
              <div class="card-body">
                <h5 class="card-title text-center"><%= link_to movie.movie_title, movie_path(movie) %></h5>
              </div>
          </div>
        </div>
      <%end%>
    </div>
  </div>
<%end%>