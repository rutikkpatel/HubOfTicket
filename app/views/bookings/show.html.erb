<div class="container">
  <h1>Booking Details</h1>
  <p><strong>Number of Seats:</strong> <%= @booking.number_of_seats %></p>
  <p><strong>Booking Status:</strong> <%= @booking.booking_status %></p>
  <p><strong>Show Date:</strong> <%= @booking.show.show_date %></p>
  <p><strong>User:</strong> <%= @booking.user.email %></p>
  <p><strong>Movie:</strong> <%= @booking.movie.movie_title %></p>
  <p><strong>Theater:</strong> <%= @booking.theater.theater_name %></p>

  <!-- Actions -->
  <div class="mt-3">
    <%= link_to 'Edit', edit_booking_path(@booking), class: "btn btn-dark" %>
    <%= button_to 'Delete', booking_path(@booking), method: :delete, data: { confirm: "Are you sure you want to delete?" }, class: "btn btn-danger" %>
    <%= link_to 'Go Back', bookings_path, class: "btn btn-primary" %>
  </div>
</div>
