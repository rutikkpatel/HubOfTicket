<% if @show.errors.any? %>
  <h4> The following errors prevented the Show ! </h4>
  <ul>
    <% @show.errors.full_messages.each do |msg| %>
      <li class = "alert alert-danger"> <%= msg %> </li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model:[@movie, @show], local: true, data: {turbo: false}) do |f| %>

  <div class = "field form-group" >
    <strong><%= f.label :show_date %></strong>
    <%= f.date_field :show_date, class:"form-control", required: true %>
  </div><br>

  <div class = "field form-group" >
    <strong><%= f.label :show_time %></strong>
    <%= f.time_field :show_time, class:"form-control", required: true %>
  </div><br>

  <div class = "field form-group" >
    <strong><%= f.label :seats %></strong>
    <%= f.number_field :total_seats, class:"form-control", required: true %>
  </div><br>

  <div class = "field form-group" >
    <strong><%= f.label :show_price %></strong>
    <%= f.number_field :show_price, class:"form-control", required: true %>
  </div><br>

  <div class = "field form-group" >
    <strong><%= f.label :movie %></strong>
    <%= f.select :movie_id, Movie.all.map { |c| [c.movie_title, c.id]}, class:"form-control" %>
  </div><br>

  <div class = "field form-group" >
    <strong><%= f.label :theater %></strong>
    <%= f.select :theater_id, Theater.all.map { |c| [c.theater_name, c.id]}, class:"form-control" %>
  </div><br>

  <div class="text-center">
    <div class = "action" >
      <%= f.button :submit, class:"btn btn-success" %>
    </div>
  </div><br>

  <div class="text-center mb-4">
    <div class = "field form-group" >
      <%= link_to 'Dismiss', { controller: 'shows', action: 'index'}, class: "btn btn-danger" %>
    </div>
  </div>
<% end %>