<% if @seat.errors.any? %>
  <h4> The following errors prevented the Seat ! </h4>
  <ul>
    <% @seat.errors.full_messages.each do |msg| %>
      <li class = "text-danger"> <%= msg %> </li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model:@seat, local: true, data: {turbo: false}) do |f| %>

  <div class = "field form-group" >
    <strong><%= f.label :number_of_seats %></strong>
    <%= f.text_field :no_of_seats, class:"form-control" %>
  </div><br>

  <div class="text-center">
    <div class = "action" >
      <%= f.button :submit, class:"btn btn-success" %>
    </div>
  </div><br>

  <div class="text-center">
    <div class = "field form-group" >
      <%= link_to 'Dismiss', { controller: 'seats', action: 'index'}, class: "btn btn-danger" %>
    </div>
  </div>
<% end %>